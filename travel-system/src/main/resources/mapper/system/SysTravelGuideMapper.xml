<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysTravelGuideMapper">
    
    <resultMap type="SysTravelGuide" id="SysTravelGuideResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="userId"    column="user_id"    />
        <result property="scenicSpotId"    column="scenic_spot_id"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
        <result property="locationName"    column="location_name"    />
        <result property="createUser"    column="createUser"    />
    </resultMap>

    <sql id="selectSysTravelGuideVo">
        select id, title, content, user_id, scenic_spot_id, image_url, created_at, updated_at, location_name, createUser from sys_travel_guide
    </sql>

    <select id="selectSysTravelGuideList" parameterType="SysTravelGuide" resultMap="SysTravelGuideResult">
        <include refid="selectSysTravelGuideVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="scenicSpotId != null "> and scenic_spot_id = #{scenicSpotId}</if>
            <if test="imageUrl != null  and imageUrl != ''"> and image_url = #{imageUrl}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
            <if test="locationName != null  and locationName != ''"> and location_name like concat('%', #{locationName}, '%')</if>
            <if test="createUser != null  and createUser != ''"> and createUser = #{createUser}</if>
        </where>
    </select>
    
    <select id="selectSysTravelGuideById" parameterType="Long" resultMap="SysTravelGuideResult">
        <include refid="selectSysTravelGuideVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertSysTravelGuide" parameterType="SysTravelGuide" useGeneratedKeys="true" keyProperty="id">
        insert into sys_travel_guide
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="userId != null">user_id,</if>
            <if test="scenicSpotId != null">scenic_spot_id,</if>
            <if test="imageUrl != null">image_url,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
            <if test="locationName != null">location_name,</if>
            <if test="createUser != null">createUser,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="userId != null">#{userId},</if>
            <if test="scenicSpotId != null">#{scenicSpotId},</if>
            <if test="imageUrl != null">#{imageUrl},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
            <if test="locationName != null">#{locationName},</if>
            <if test="createUser != null">#{createUser},</if>
         </trim>
    </insert>

    <update id="updateSysTravelGuide" parameterType="SysTravelGuide">
        update sys_travel_guide
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="scenicSpotId != null">scenic_spot_id = #{scenicSpotId},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="locationName != null">location_name = #{locationName},</if>
            <if test="createUser != null">createUser = #{createUser},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysTravelGuideById" parameterType="Long">
        delete from sys_travel_guide where id = #{id}
    </delete>

    <delete id="deleteSysTravelGuideByIds" parameterType="String">
        delete from sys_travel_guide where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>